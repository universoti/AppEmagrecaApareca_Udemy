	  </Compile>
	  <Compile Update="Mvvm\Views\TelaInicioView.xaml.cs">
	    <DependentUpon>TelaInicioView.xaml</DependentUpon>
	  </Compile>
	  <Compile Update="Mvvm\Views\TipoRefeicoesView.xaml.cs">
	    <DependentUpon>TipoRefeicoesView.xaml</DependentUpon>
	  </Compile>
	</ItemGroup>

</Project>
