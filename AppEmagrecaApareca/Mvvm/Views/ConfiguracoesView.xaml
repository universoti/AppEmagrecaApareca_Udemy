<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEmagrecaApareca.ConfiguracoesView"
             Title="Configurações">
    <VerticalStackLayout>
        <VerticalStackLayout Margin="10" BackgroundColor="Blue" HeightRequest="100">
            <Label Text="Clique no botão para carregar o cadastros dos alimentos e tipo de refeições diárias!" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   FontAttributes="Bold" 
                   FontSize="Body" 
                   Margin="15" 
                   TextColor="White" />
        </VerticalStackLayout>

        <VerticalStackLayout BackgroundColor="GreenYellow" Margin="10" HeightRequest="150">
            <Button x:Name="NovoBtn" 
                    Text="Carregar informações iniciais" 
                    Command="{Binding ConfiguraDadosIniciaisCommand}"
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" 
                    Margin="40" 
                    BackgroundColor="White" 
                    TextColor="Blue" 
                    FontAttributes="Bold" />
        </VerticalStackLayout>





    </VerticalStackLayout>
</ContentPage>