<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEmagrecaApareca.EditarVisualizarTipoRefeicoesView"
             Title="Tipo de Refeições diárias">
    <VerticalStackLayout Margin="10">
        <Label 
            Text="Lance os tipos de refeições do dia!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry IsVisible="Hidden" x:Name="Id" Text="{Binding Id}" />

        <Label Text="Descrição"/>
        <Entry Placeholder="Digite o nome da refeição, exemplo café,almoço..." x:Name="DsTipoRefeicao" Text="{Binding DsTipoRefeicao}"/>

        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <Button
                x:Name="SalvarProd"
                Text="Salvar"
                HorizontalOptions="Start"
                Clicked="OnClickCadastrar"
                Margin="10"
                
                />

        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>