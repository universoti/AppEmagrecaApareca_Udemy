<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEmagrecaApareca.TelaInicio"
             Title="Início">
    <VerticalStackLayout BackgroundColor="White">
        
        <VerticalStackLayout BackgroundColor="DarkSlateBlue" HeightRequest="190">
            <Label  
                Margin="62"
                Text="Bem vindo ao Emagreça e Apareça!"
                FontSize="13"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                TextColor="White"
                FontAttributes="Bold"
                
                />

        </VerticalStackLayout>
        

        <VerticalStackLayout Margin="30">
            <Image Source="cardapiomaui.png"  VerticalOptions="Center" HorizontalOptions="Center" />

        </VerticalStackLayout>

        <VerticalStackLayout Margin="10"  BackgroundColor="DarkSlateBlue" HeightRequest="150">
            <Label  
                 Margin="50"
                 Text="Bem vindo ao Emagreça e Apareça!"
                  FontSize="Subtitle"
                  VerticalOptions="Center"
                  HorizontalOptions="Center"
                  TextColor="White"
                  FontAttributes="Bold"
     
                />
            
        </VerticalStackLayout>


    </VerticalStackLayout>
</ContentPage>